<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_add_task"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.a01002648.onelistmobile.AddTaskActivity">

        <TextView
            android:text="Please provide the following information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textLabel"
            android:textSize="17sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Task Name:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/labelTaskName"
            android:textSize="16sp"
            android:layout_below="@+id/textLabel"
            android:layout_alignLeft="@+id/textLabel"
            android:layout_alignStart="@+id/textLabel" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:layout_marginTop="13dp"
            android:id="@+id/txtTaskName"
            android:layout_below="@+id/labelTaskName"
            android:layout_alignLeft="@+id/labelTaskName"
            android:layout_alignStart="@+id/labelTaskName"
            android:layout_alignRight="@+id/textLabel"
            android:layout_alignEnd="@+id/textLabel" />
        <TextView
            android:text="Description:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/textLabelDescription"
            android:textSize="16sp"
            android:layout_below="@+id/txtTaskName"
            android:layout_alignLeft="@+id/txtTaskName"
            android:layout_alignStart="@+id/txtTaskName" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:layout_marginTop="13dp"
            android:id="@+id/txtTaskDescription"
            android:layout_below="@+id/textLabelDescription"
            android:layout_alignLeft="@+id/textLabelDescription"
            android:layout_alignStart="@+id/textLabelDescription"
            android:layout_alignRight="@+id/textLabelDescription"
            android:layout_alignEnd="@+id/textLabel" />
        <TextView
            android:text="Ending Date:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/textLabelEndingDate"
            android:textSize="16sp"
            android:layout_below="@+id/txtTaskDescription"
            android:layout_alignLeft="@+id/txtTaskDescription"
            android:layout_alignStart="@+id/txtTaskDescription" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:layout_marginTop="13dp"
            android:id="@+id/txtTaskDate"
            android:layout_below="@+id/textLabelEndingDate"
            android:layout_alignLeft="@+id/textLabelEndingDate"
            android:layout_alignStart="@+id/textLabelEndingDate"
            android:layout_alignRight="@+id/textLabel"
            android:layout_alignEnd="@+id/textLabel" />
        <TextView
            android:text="Calculated Cost:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/textLabelCost"
            android:textSize="16sp"
            android:layout_below="@+id/txtTaskDate"
            android:layout_alignLeft="@+id/txtTaskDate"
            android:layout_alignStart="@+id/textLabel" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:layout_marginTop="13dp"
            android:id="@+id/txtTaskCost"
            android:layout_below="@+id/textLabelCost"
            android:layout_alignLeft="@+id/textLabelCost"
            android:layout_alignStart="@+id/textLabelCost"
            android:layout_alignRight="@+id/textLabel"
            android:layout_alignEnd="@+id/textLabel" />

        <Button
            android:text="Create New Task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSave"
            android:layout_below="@+id/txtTaskCost"
            android:layout_alignLeft="@+id/txtTaskCost"
            android:layout_alignStart="@+id/txtTaskCost"
            android:layout_alignRight="@+id/textLabel"
            android:layout_alignEnd="@+id/textLabel"/>


    </RelativeLayout>
</ScrollView>
